<Window x:Class="DictionaryQuiz.DeveloperInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DictionaryQuiz"
        mc:Ignorable="d"
        Title="Developer information" Height="230" Width="430" MinWidth="430" MinHeight="230">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Developer Information" FontSize="16" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBlock Text="Developed By: Igor Makowski" TextWrapping="Wrap"/>
            <TextBlock Text="Contact: igor02234567889@gmail.com" TextWrapping="Wrap" Margin="0,0,0,10"/>

            <TextBlock Text="Links" FontSize="16" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBlock>
                • GitHub Repository:
                <Hyperlink
                    NavigateUri="https://github.com/Vertiigor/DictionaryQuiz"
                    RequestNavigate="Hyperlink_RequestNavigate">
                    https://github.com/Vertiigor/DictionaryQuiz
                </Hyperlink>
            </TextBlock>

            <TextBlock Text="License" FontSize="16" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBlock Text="MIT License" TextWrapping="Wrap" Margin="0,0,0,10"/>
        </StackPanel>
    </Grid>
</Window>
